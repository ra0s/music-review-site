<div class="parent-container">
    <div class = "first-section">
        <div class="col s12">
        <div class="row animated fadeIn slower">
        <h3>Welcome to {{title}}, a site where you can review and discover music.</h3>
        </div>
        <div class="row">
        {{#if currentUserId}}
        <a class="start-btn" href="search"><button class="animated pulse btn waves-effect waves-light z-depth-3">Write A Review</button></a>
        {{else}}
        <a class="start-btn" href="users/new"><button class=" animated pulse btn waves-effect waves-light z-depth-3">Get Started</button></a>
        {{/if}}
        </div>
        </div>
    </div>
    </div>
<div class="container row">
    <h3 class="center-align">New Releases</h3>
    {{#each albums as |album|}}
    <div class="col s3 new-release animated fadeInRight">
      <div class="card">
        <div class="card-image">
          <img src="{{album.img}}">
        </div>
        <div class="card-content center-align">
          <h6>{{album.name}}</h6>
          <h6>by</h6>
          <h6>{{album.artist}}</h5>
        </div>
        <div class="card-action center-align">
          <form action="/reviews/new?album={{album.name}}&artist={{album.artist}}&uri={{album.uri}}&img={{album.img}}" method="post">
          <button class="btn waves-effect waves-light col s5" type="submit">Review It</button>
          <a style="margin-left: 10px" href="/reviews/album?name={{album.name}}&artist={{album.artist}}" class="col s5 offset-s5"><button class="btn waves-effect waves-light" type="button">View Reviews</button></a>
        </div>
      </div>
    </div>
    {{/each}}
</div>